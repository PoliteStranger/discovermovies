@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <style>
        table {
            border: 2px solid;
            width: 100%;
        }
        th {
            height: 35px;
            text-align: left;
        }
        td {
            text-align: left;
        }
        tr:first-child {background-color: gray;}
        tr:first-child {border: 2px solid;}
        tr:not(:first-child):hover {background-color: grey;}
        tr:nth-child(even) {background-color: #f2f2f2;}

        select {
            background-color: gray;
            font-weight: bold;
        }
    </style>
</head>
<body>
<form id="form" role="search">
    <input type="search" id="query" name="q"
           placeholder="Search..."
           aria-label="Search through site content">
    <button>Search</button>
</form>

<div>
    <table>
        <tr>
            <th>Title</th>
            <th><select name="Genre" id="Genre">
                <option value="action">Action</option>
                <option value="fantasy">Fantasy</option>
                <option value="romance">Romance</option>
                <option value="comedy">Comedy</option>
            </select></th>
            <th><select name="Release Year" id="Release Year">
                <option value="1990">1990</option>
                <option value="1991">1991</option>
                <option value="1992">1992</option>
                <option value="1993">1993</option>
                <option value="1994">1994</option>
                <option value="1995">1995</option>
                <option value="1996">1996</option>
                <option value="1997">1997</option>
                <option value="1998">1998</option>
                <option value="1999">1999</option>
            </select></th>
            <th>Director</th>
            <th>Production Company</th>
        </tr>
        <tr>
            <td>Starship Troopers</td>
            <td>Action</td>
            <td>1997</td>
            <td>Paul Verhoeven</td>
            <td>TriStar Pictures</td>
        </tr>
        <tr>
            <td>Batman Returns</td>
            <td>Action</td>
            <td>1992</td>
            <td>Tim Burton</td>
            <td>Warner Bros.</td>
        </tr>
        <tr>
            <td>She's All That</td>
            <td>Romance</td>
            <td>1999</td>
            <td>Robert Iscove</td>
            <td>Tapestry Films</td>
        </tr>
    </table>
</div>



</body>
